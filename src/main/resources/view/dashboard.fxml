<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.humber.controller.DashboardController"
            prefHeight="400.0" prefWidth="700.0">
    <top>
        <HBox alignment="CENTER" prefHeight="80.0" style="-fx-background-color: #2c3e50;">
            <children>
                <Label text="Vehicle Maintenance System" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Inventory">
                    <content>
                        <fx:include source="inventory_tab.fxml"/>
                    </content>
                </Tab>
                <Tab text="Appointments">
                    <content>
                        <fx:include source="appointments_tab.fxml"/>
                    </content>
                </Tab>
                <Tab text="Vehicles">
                    <content>
                        <fx:include source="vehicles_tab.fxml"/>
                    </content>
                </Tab>
                <Tab text="Customers">
                    <content>
                        <fx:include source="customers_tab.fxml"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
